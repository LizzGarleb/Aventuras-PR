<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Adventuras PR</title>
    <link rel="stylesheet" href="/css/information.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
</head>

<body>
    <header>
        <nav class="navbar">
            <div class="nav-left px-2 py-2">
                <a href="/">
                    <img src="" alt="Logo" class="rounded-circle" height="70" width="70">
                </a>
            </div>
            <div class="nav-right d-flex">
                <div class="d-flex flex-row">
                    <a href="/signup" class="signup">Sign Up</a>
                    <a href="/login" class="login btn btn-primary">Log In</a>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="container-content container-fluid">
            <!-- Slider main container -->
            <div class="swiper">
                <!-- Additional required wrapper -->
                <div class="swiper-wrapper">
                    <!-- Slides -->
                    <div class="swiper-slide"><img src="../"></div>
                    <div class="swiper-slide"><img src="../carousel-2.jpg"></div>
                    <div class="swiper-slide"><img src="../carousel-3.jpg"></div>
                    <div class="swiper-slide"><img src="../carousel-4.jpg"></div>
                    <div class="swiper-slide"><img src="../carousel-5.jpg"></div>
                </div>
                <div class="swiper-pagination"></div>

                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </div>
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 text-center">
                    <h1>
                        <%= information.name %></h1>
                </div>
            </div>
            <div class="row justify-content-between mt-4">
                <div class="col-md-5">
                    <div class="business-hours">
                        <p>Horarios de Servicio:</p>
                        <ul>
                            <% Object.entries(businessHours).map(([day, hours])=> { %>
                                <li><%= day %>: <%= hours %></li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="contact-info">
                        <% if (information.phone_number) { %>
                            <p>Telefono: <%= information.phone_number %></p>
                            <hr>
                        <% } %>
                        <% if (information.website) { %>
                            <p>Pagina Web: <%= information.website %></p>
                            <hr>
                         <% } %>
                        <div class="social-icons">
                            <% if (information.facebook) { %>
                                <a href="<%= information.facebook %>"><img src="../images/icons/facebook.png"alt=""></a>
                            <% } %>
                            <% if (information.instagram) { %>
                                <a href="<%= information.instagram %>"><img src="../images/icons/instagram.png" alt=""></a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 d-flex align-items-center">
                    <a href="/">
                        <img src="" alt="Logo" class="rounded-circle" height="70" width="70"><!-- Insert logo here -->
                    </a>
                    <ul class="quick-links ml-3">
                        <li>
                            <a href="/activitys">Entretenimientos</a>
                        </li>
                        <li>
                            <a href="/stay">Alojamiento</a>
                        </li>
                        <li>
                            <a href="/restaurant">Restaurantes</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <form action="#" method="post">
                        <label for="email">Subscribete a nuestro news letter:</label>
                        <div class="input-group">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary">Subscribete</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </footer>
    <script src="../js/information.js"></script>
</body>

</html>