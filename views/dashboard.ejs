        <script>
            $('.carousel').each(function () {
                    $(this).carousel({
                        interval: 10000,
                        wrap: true
                    })

                    $(this).find('.carousel-item').each(function () {
                        var minPerSlide = 1;
                        var next = $(this).next();
                        if (!next.length) {
                            next = $(this).siblings(':first');
                        }
                        next.children(':first-child').clone().appendTo($(this));

                        for (var i = 0; i < minPerSlide; i++) {
                            next = next.next();
                            if (!next.length) {
                                next = $(this).siblings(':first');
                            }

                            next.children(':first-child').clone().appendTo($(this));
                        }
                    });
                });
        </script>
