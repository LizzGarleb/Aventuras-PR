<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adventuras PR</title>
    <link rel="stylesheet" type="text/css" href="css/list_layout.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<body>
    <header>
        <nav class="navbar">
            <div class="nav-left px-2 py-2">
                <a href="/">
                    <img src="" alt="Logo" class="rounded-circle" height="70" width="70">
                </a>
            </div>
            <div class="nav-right d-flex">
                <div class="d-flex flex-row">
                    <a href="/signup" class="signup">Sign Up</a>
                    <a href="/login" class="login btn btn-primary">Log In</a>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="container-fluid mt-4">
            <div class="row">
                <% for (const card of data) { %>
                    <div class="col-md-4 col-lg-3 mb-4">
                        <a href="<%= routePrefix %>/<%= card.id %>">
                        <div class="card h-100">
                            <img src="<%= card.image %>" alt="banner-pic" class="card-img-top">
                            <div class="card-body">
                                <h4 class="card-title">
                                    <%= card.name %>
                                </h4>
                                <address class="card-text">
                                    <%= card.location %>
                                </address>
                            </div>
                        </div>
                        </a>
                    </div>
                    <% } %>
            </div>
        </div>
    </main>
    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 d-flex align-items-center">
                    <a href="/">
                        <img src="" alt="Logo" class="rounded-circle" height="70" width="70"><!-- Insert logo here -->
                    </a>
                    <ul class="quick-links ml-3">
                        <li>
                            <a href="/activitys">Entretenimientos</a>
                        </li>
                        <li>
                            <a href="/stay">Alojamiento</a>
                        </li>
                        <li>
                            <a href="/restaurant">Restaurantes</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <form action="/subscribe" method="post" id="newsletter">
                        <label for="email">Subscribete a nuestro news letter:</label>
                        <div class="input-group">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary">Subscribete</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </footer>
</body>

</html>